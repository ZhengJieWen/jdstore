<div class="container mb100">
  <div class="col-md-12">
    <h3>購物車</h3>
    <p>您的購物車目前共有
      <span class="badge" style="background-color: #77cde3;font-size:13px;vertical-align:center;">
        <%= current_cart.products.count %>
      </span>  個商品。
    </p>
    <hr>
    <div class="col-sm-8 padding-bottom-2x">
      <div class="shopping-cart">
      <% current_cart.cart_items.each do |cart_item| %>
      <div class="item">
        <% if cart_item.product.image.present? %>
          <%= link_to image_tag(cart_item.product.image.medium.url), product_path(cart_item.product), class: "item-thumb"%>
        <% else %>
          <%= link_to image_tag("http://placehold.it/200x200&text=No Pic"), product_path(cart_item.product), class: "item-thumb"%>
        <% end %>
        <div class="item-details">
            <p class="item-title">
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </p>
            <p class="item-price">
              ¥ <%= cart_item.product.price %>
            </p>
            <% cart_item = current_cart.cart_items.find_by(product_id: cart_item.product_id) %>
            <%= form_for cart_item,url: cart_item_path(cart_item.product) do |f| %>
            <div class="input-group count-input ">
            	<span class="input-group-btn">
            		<button class="btn btn-default" type="submit" name="sub" value="1"><span class="glyphicon glyphicon-minus"></span></button>
            	</span>
            	<%= f.number_field :quantity,class:"form-control text-center",:readonly => true  %>
            	<span class="input-group-btn">
            		<button class="btn btn-default" type="submit"  name="add" value="1"><span class="glyphicon glyphicon-plus"></span></button>
            	</span>
            </div>
            <% end %>


        </div>
        <div class="row">
          <%= link_to cart_item_path(cart_item.product_id), class: "item-remove", method: :delete do %>
          <i class="fa fa-trash"></i>
            <% end %>
        </div>

      </div>
      <% end %>
    </div>
    </div>
  <!-- Sidebar -->
    <div class="col-md-3 col-md-offset-1 col-sm-4 padding-bottom-2x ">
    <aside>
      <h3 class="toolbar-title">購物車總價:</h3>
      <h4 class="amount">¥ <%= render_cart_total_price(current_cart) %></h4>
      <p class="text-sm text-gray">* 注意:該價格不包括任何稅費和郵費，此部分費用會在下單後自動計算。</p>

      <%= link_to("更新購物車", carts_path, class: "btn btn-default btn-block") %>

      <%= link_to("清空購物車", clean_carts_path, method: :delete, class: "btn btn-info btn-block", data: {confirm: "Are you sure to clean the cart?"}) %>

      <%= link_to("结帳", checkout_carts_path, method: :post, class: "btn btn-danger btn-block") %>
    </aside>
  </div>
  <!-- Sidebar -->
  </div>
</div>
